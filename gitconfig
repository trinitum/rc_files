[user]
	name = [%full_name%]
	email = [%email_address%]
[push]
	default = current
[pull]
        rebase = true
[color]
	ui = auto
[alias]
	br = branch
	bra = branch -a
	co = checkout
	ci = commit
	st = status
	gr = log --pretty=\"format:%C(yellow)%h%C(bold)%d %C(white)%an%Creset %C(green)%s%Creset\" --graph
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
[diff]
	algorithm = patience
[merge]
        tool = vimdiff
[mergetool]
        prompt = false
